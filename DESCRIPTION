Package: ravetools
Type: Package
Title: Signal and Image Processing Toolbox for Analyzing Intracranial 'Electroencephalography' Data
Version: 0.1.5
Language: en-US
Authors@R: c(
    person("Zhengjia", "Wang", email = "dipterix.wang@gmail.com", role = c("aut", "cre")),
